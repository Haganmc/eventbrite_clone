<div class="container mt-5">
  <h1 class="text-center mb-4">Edit Event</h1>

  <%= form_with model: @event, local: true, class: "needs-validation" do |form| %>
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 5 %>
    </div>

    <div class="mb-3">
      <%= form.label :event_location, class: "form-label" %>
      <%= form.text_field :event_location, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :event_date, class: "form-label" %>
      <%= form.datetime_select :event_date, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= form.submit "Update Event", class: "btn btn-primary" %>
      <%= link_to "Cancel", event_path(@event), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>