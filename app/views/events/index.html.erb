<h1>Upcoming Events</h1>
<% if @upcoming_events.any? %>
  <ul>
    <% @upcoming_events.each do |event| %>
      <li>
        <%= link_to event.title, event_path(event) %> —
        <%= event.event_date.strftime("%B %d, %Y at %I:%M %p") %> at <%= event.event_location %>
        <% if user_signed_in? && event.attendees.include?(current_user) %>
          | <%= button_to "Remove Myself", event_event_attendee_path(event, current_user.event_attendees.find_by(event: event)), method: :delete, data: { confirm: "Remove yourself from this event?" } %>
        <% end %>
        <% if user_signed_in? && event.creator == current_user %>
          | <%= link_to "Edit", edit_event_path(event) %>
          | <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No upcoming events.</p>
<% end %>

